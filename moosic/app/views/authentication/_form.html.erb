<%= form_for(:session, url: authentication_path) do |f| %>
  <div class="input-container">
    <div id="flash_messages"><%= flash_messages %></div>

    <div class="field">
      <%= f.email_field :email, :placeholder => 'email' %>
    </div>
    <div class="field">
      <%= f.password_field :password, :placeholder => 'password' %>
    </div>
    <div class="actions">
      <%= f.submit 'Log in' %>
    </div>
  </div>
<% end %>