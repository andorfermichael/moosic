<h1>Playlists</h1>
<% if @user == current_user %>
  <p><%= link_to "Create new Playlist", new_playlist_path %></p>
<% end %>

<div class="visible-xs-block">
  <% @playlists.each_slice(1) do |playlist_slice| %>
      <div class="row col-xs-12">
        <% playlist_slice.each do |playlist| %>
            <div class="col-xs-12">
              <%= link_to(playlist) do %>
                  <div class="tile">
                    <%= image_tag playlist.image_url, alt: playlist.name, class: 'center-block' %>
                    <h4><%= playlist.name %></h4>
                    <p class="create-date">created on <%= l playlist.created_at, format: :european_format %></p>
                    <p class="count-songs"><%= playlist.count_songs %> songs</p>
                  </div>
              <% end %>
            </div>
        <% end %>
      </div>
  <% end %>
</div>

