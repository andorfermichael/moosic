<p id="notice"><%= notice %></p>

<h1>Listing Songs</h1>

<table>
  <thead>
    <tr>
      <th>Titel</th>
      <th>Source</th>
      <th>Thumbnail url</th>
      <th>Song url</th>
      <th>Host</th>
      <th>Year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= song.titel %></td>
        <td><%= song.source %></td>
        <td><%= song.thumbnail_url %></td>
        <td><%= song.song_url %></td>
        <td><%= song.host %></td>
        <td><%= song.year %></td>
        <td><%= link_to 'Show', song %></td>
        <td><%= link_to 'Edit', edit_song_path(song) %></td>
        <td><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

